<!DOCTYPE html>
<html>

<head>

    <meta charset="UTF-8" />
    <title>{% block title %}Back-office{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('resources/images/favicon.ico') }}" />

    <link rel="stylesheet" type="text/css" href="{{ asset('resources/css/common.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('resources/css/admin.css') }}" />

    <script type="text/javascript" src="{{ asset('resources/scripts/lib/jquery-1.11.1.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('resources/scripts/global.js') }}"></script>

    {% block header %}{% endblock %}

    </head>

<body>

    <div id="page">

        <div id="header">

            <div id="bo-top">
                BACK-OFFICE
                <span><a href="{{ path('bodu_home_fo') }}">Retour au site</a> | <a href="{{ path('logout') }}">Déconnexion</a></span>
            </div>
            <div class="sep-30"></div>
            <ul>
                <li class="first"><a href="{{ path('bodu_home_bo_banner_list') }}">Home</a></li>
                <li><a href="{{ path('bodu_menu_bo_list') }}">Menus</a></li>
                <li><a href="{{ path('bodu_slideshow_bo_list') }}">Créer Diaporamas</a></li>
                <li><a href="{{ path('bodu_section_bo_list') }}">Gestion Diaporamas</a></li>
                <li><a href="{{ path('bodu_video_bo_list') }}">Vidéos</a></li>
                <li><a href="{{ path('bodu_news_bo_list') }}">Actualités</a></li>
                <li><a href="{{ path('bodu_skin_bo_list') }}">Skins</a></li>
                <li class="last"><a href="{{ path('bodu_contact_link_bo_list') }}">Lien/contact</a></li>
            </ul>
            <div class="clear"></div>

        </div>

        <div class="sep-10"></div>
        <div class="bo-separator"></div>
        <div class="sep-20"></div>

        {% if(app.session.flashbag.has('bo-error-message')) %}
            <div class="bo-error-message">
            {% for message in app.session.flashbag.get('bo-error-message') %}
                <p>{{ message }}</p>
            {% endfor %}
            </div>
        {% endif %}
        {% if(app.session.flashbag.has('bo-warning-message')) %}
            <div class="bo-warning-message">
            {% for message in app.session.flashbag.get('bo-warning-message') %}
                {{ message }}<br/>
            {% endfor %}
            </div>
        {% endif %}
        {% if(app.session.flashbag.has('bo-log-message')) %}
            <div class="bo-log-message">
            {% for message in app.session.flashbag.get('bo-log-message') %}
                {{ message }}<br/>
            {% endfor %}
            </div>
        {% endif %}

        <div id="content">
            {% block body %}{% endblock %}
        </div>

    </div>

</body>

</html>
