{#
    Allows to edit slideshow.
    Required :
    - slideshowToEdit : FormView element based on SlideshowType object (i.e. slideshow to edit).
#}

{% extends "::admin.html.twig" %}

{% block header %}

    <link rel="stylesheet" type="text/css" href="{{ asset('resources/css/lib/jquery.cleditor.css') }}" />

    <script type="text/javascript" src="{{ asset('resources/scripts/lib/jquery.cleditor.min.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $("#bodu_slideshowbundle_slideshow_description").cleditor({height: 170});
        });
    </script>

    {# For existing slideshow => add script to order pictures #}
    {% if (slideshowToEdit.vars.value.id) %}

        <link rel="stylesheet" type="text/css" href="{{ asset('resources/css/lib/jquery-ui-1.10.4.custom.css') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('resources/css/lib/colorpicker.css') }}" />

        <script type="text/javascript" src="{{ asset('resources/scripts/lib/jquery-ui-1.10.4.custom.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('resources/scripts/lib/colorpicker.js') }}"></script>
        <script type="text/javascript" src="{{ asset('resources/scripts/admin/slideshow.js') }}"></script>

    {% endif %}

{% endblock %}

{% block body %}

    {% form_theme slideshowToEdit ':forms:custom_errors.html.twig' %}

    {% if (slideshowToEdit.vars.value.id) %}
    <h1>Modification du diaporama</h1>
    {% else %}
    <h1>Ajout d'un diaporama</h1>
    {% endif %}

    <form action="{{ path('bodu_slideshow_bo_edit', { 'id': slideshowToEdit.vars.value.id }) }}" method="post" {{ form_enctype(slideshowToEdit) }}>

        <div class="field-set">

            {{ form_label(slideshowToEdit.name, "Nom du diaporama") }}
            {{ form_widget(slideshowToEdit.name, { 'attr': {'class': 'field-L'}, 'max_length' : '255' }) }}
            {{ form_errors(slideshowToEdit.name) }}

            <div class="field-set-separator"></div>

            {{ form_label(slideshowToEdit.description, "Description") }}
            {{ form_widget(slideshowToEdit.description) }}
            {{ form_errors(slideshowToEdit.description) }}

            <div class="field-set-separator"></div>

            {{ form_widget(slideshowToEdit.activBorder) }}
            {{ form_label(slideshowToEdit.activBorder, "Activer la bordure") }}

            <div id="slideshow-border">

                {{ form_errors(slideshowToEdit.activBorder) }}

                <div class="left w-50">
                    {{ form_label(slideshowToEdit.borderColor, "Couleur de la bordure") }}
                    {{ form_widget(slideshowToEdit.borderColor, { 'attr': {'class': 'field-S'}, 'max_length' : '6' }) }}
                    {{ form_errors(slideshowToEdit.borderColor) }}
                </div>

                <div class="left w-50">
                    {{ form_label(slideshowToEdit.thicknessValue, "Epaisseur de la bordure") }}
                    {{ form_widget(slideshowToEdit.thicknessValue, { 'attr': {'class': 'field-S'} }) }}
                    {{ form_errors(slideshowToEdit.thicknessValue) }}
                </div>

                <div class="clear"></div>

            </div>

            <div class="field-set-separator"></div>

            {{ form_label(slideshowToEdit.thumbnailPosition, "Position des vignettes") }}
            <span class="comment">
                Permet d'indiquer le mode de disposition des vignettes et du diaporama :<br/>
                - Vertical gauche : les vignettes sont affichées verticalement à gauche du diaporama<br/>
                - Horizontal haut : les vignettes sont affichées horizontalement au dessus du diaporama
            </span>
            {{ form_widget(slideshowToEdit.thumbnailPosition) }}
            {{ form_errors(slideshowToEdit.thumbnailPosition) }}

            <div class="field-set-separator"></div>

            {{ form_label(slideshowToEdit.section, "Page associée") }}
            {{ form_widget(slideshowToEdit.section, { 'attr': {'class': 'field-M'} }) }}
            {{ form_errors(slideshowToEdit.section) }}

            {{ form_rest(slideshowToEdit) }}

        </div>

        <div class="sep-20"></div>

        {# For existing slideshow => we can also define pictures with specific order... #}
        {% if (slideshowToEdit.vars.value.id) %}

            <div class="field-set">

                <a class="link-button" href="{{ path('bodu_slideshow_bo_picture_edit', { 'slideshowId': slideshowToEdit.vars.value.id }) }}">
                    <img width="16" height="16" border="0" title="Ajouter une image" alt="Ajouter" src="{{ asset('resources/images/admin/add.png') }}" />
                    <span>Ajouter une image</span>
                </a>

                <div class="sep-15"></div>

                {# Display all pictures linked to slideshow #}
                <table class="bo-table bo-sortable-table">

                    <thead>
                        <tr>
                            <th class="bo-table-id">ID</th>
                            <th class="bo-table-label">Image</th>
                            <th class="bo-table-action"><img src="{{ asset('resources/images/admin/edit.png') }}" width="16" height="16" border="0" alt="Modifier" title="Modifier" /></th>
                            <th class="bo-table-action"><img src="{{ asset('resources/images/admin/delete.png') }}" width="16" height="16" border="0" alt="Supprimer" title="Supprimer" /></th>
                        </tr>
                    </thead>

                    <tbody id="picture-list">
                    {% for picture in slideshowToEdit.vars.value.pictures %}
                        <tr id="picture-list-{{ picture.id }}">
                            <td class="bo-table-id">{{ picture.id }}</td>
                            <td class="bo-table-label">{{ picture.name }}</td>
                            <td class="bo-table-action">
                                <a href="{{ path('bodu_slideshow_bo_picture_edit', { 'slideshowId': slideshowToEdit.vars.value.id, 'pictureId': picture.id }) }}" >
                                    <img src="{{ asset('resources/images/admin/edit.png') }}" width="16" height="16" border="0" alt="Modifier" title="Modifier" />
                                </a>
                            </td>
                            <td class="bo-table-action">
                                <a href="{{ path('bodu_slideshow_bo_picture_delete', { 'slideshowId': slideshowToEdit.vars.value.id, 'pictureId': picture.id }) }}" onclick="return confirm('Confirmer la suppression ?');" >
                                    <img src="{{ asset('resources/images/admin/delete.png') }}" width="16" height="16" border="0" alt="Supprimer" title="Supprimer" />
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>

                </table>

                {# Hidden field to save picture order #}
                <input id="ordered-picture-list" name="ordered-picture-list" type="hidden" value="" />

            </div>

            <div class="sep-20"></div>

        {% endif %}

        <input type="submit" class="button" value="Enregistrer" />

    </form>

    <div class="sep-20"></div>

{% endblock %}
